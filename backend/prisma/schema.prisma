generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum SubmissionStatus {
  PENDING
  APPROVED
  REJECTED
}

enum MissionLogStatus {
  PENDING
  APPROVED
  REJECTED
}

model User {
  id            Int             @id @default(autoincrement())
  telegramId    Int?            @unique
  firstName     String?
  lastName      String?
  username      String?
  phone         String?
  storeName     String?
  managerName   String?
  city          String?
  customerCode  String?
  points        Int             @default(0)
  stamps        Int             @default(0)
  vipSince      DateTime?
  missionLogs   MissionLog[]
  displays      Display[]
  purchases     Purchase[]
  referrals     Referral[]
  notifications Notification[]
  stampsHistory Stamp[]
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
}

model Mission {
  id           Int          @id @default(autoincrement())
  title        String?
  description  String?
  rewardStamps Int?
  rewardPoints Int?
  isActive     Boolean      @default(true)
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
  missionLogs  MissionLog[]
  displays     Display[]
  purchases    Purchase[]
  referrals    Referral[]
}

model MissionLog {
  id        Int              @id @default(autoincrement())
  user      User             @relation(fields: [userId], references: [id])
  userId    Int
  mission   Mission          @relation(fields: [missionId], references: [id])
  missionId Int
  payload   String?
  status    MissionLogStatus @default(PENDING)
  adminNote String?
  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt
}

model Display {
  id        Int              @id @default(autoincrement())
  user      User             @relation(fields: [userId], references: [id])
  userId    Int
  mission   Mission          @relation(fields: [missionId], references: [id])
  missionId Int
  imageUrl  String
  status    SubmissionStatus @default(PENDING)
  adminNote String?
  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt
}

model Purchase {
  id        Int              @id @default(autoincrement())
  user      User             @relation(fields: [userId], references: [id])
  userId    Int
  mission   Mission          @relation(fields: [missionId], references: [id])
  missionId Int
  imageUrl  String
  brand     String
  amount    Int              @default(0)
  status    SubmissionStatus @default(PENDING)
  adminNote String?
  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt
}

model Referral {
  id        Int              @id @default(autoincrement())
  user      User             @relation(fields: [userId], references: [id])
  userId    Int
  mission   Mission          @relation(fields: [missionId], references: [id])
  missionId Int
  fullName  String
  phone     String
  status    SubmissionStatus @default(PENDING)
  adminNote String?
  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt
}

model Notification {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  title     String
  body      String
  read      Boolean  @default(false)
  readAt    DateTime?
  createdAt DateTime @default(now())
}

model Stamp {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  amount    Int
  createdAt DateTime @default(now())
}
