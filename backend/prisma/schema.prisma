generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum SubmissionStatus {
  PENDING
  APPROVED
  REJECTED
}

enum MissionLogStatus {
  PENDING
  APPROVED
  REJECTED
  COMPLETED
}

enum MissionType {
  PURCHASE
  DISPLAY
  REFERRAL
  TRAINING
  ATTENDANCE
  CUSTOM
}

model User {
  id            Int            @id @default(autoincrement())
  telegramId    Int?           @unique
  firstName     String?
  lastName      String?
  username      String?
  storeName     String?
  managerName   String?
  city          String?
  customerCode  String?
  phone         String?
  points        Int            @default(0)
  stamps        Int            @default(0)
  vipSince      DateTime?
  missionLogs   MissionLog[]
  displays      Display[]
  purchases     Purchase[]
  referrals     Referral[]
  notifications Notification[]
  stampsHistory Stamp[]
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
}

model Mission {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  reward      Int      @default(0)
  rewardPoints Int     @default(0)
  rewardStamps Int     @default(0)
  type        MissionType @default(CUSTOM)
  isActive    Boolean  @default(true)
  startDate   DateTime?
  endDate     DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  stamps      Stamp[]
  missionLogs MissionLog[]
  displays    Display[]
  purchases   Purchase[]
  referrals   Referral[]
  missionUpdates MissionUpdate[]
}

model MissionLog {
  id        Int              @id @default(autoincrement())
  user      User             @relation(fields: [userId], references: [id])
  userId    Int
  mission   Mission          @relation(fields: [missionId], references: [id])
  missionId Int
  payload   String?
  status    MissionLogStatus @default(PENDING)
  reward    Int              @default(0)
  adminNote String?
  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt
}

model Display {
  id        Int              @id @default(autoincrement())
  user      User             @relation(fields: [userId], references: [id])
  userId    Int
  mission   Mission          @relation(fields: [missionId], references: [id])
  missionId Int
  imageUrl  String
  brand     String?
  location  String?
  notes     String?
  status    SubmissionStatus @default(PENDING)
  adminNote String?
  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt
}

model Purchase {
  id        Int              @id @default(autoincrement())
  user      User             @relation(fields: [userId], references: [id])
  userId    Int
  mission   Mission          @relation(fields: [missionId], references: [id])
  missionId Int
  imageUrl  String
  amount    Int              @default(0)
  purchaseDate DateTime?
  brands    String?
  notes     String?
  status    SubmissionStatus @default(PENDING)
  adminNote String?
  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt
}

model Referral {
  id        Int              @id @default(autoincrement())
  user      User             @relation(fields: [userId], references: [id])
  userId    Int
  mission   Mission          @relation(fields: [missionId], references: [id])
  missionId Int
  storeName String
  managerName String
  phone     String
  city      String?
  notes     String?
  status    SubmissionStatus @default(PENDING)
  adminNote String?
  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt
}

model Notification {
  id        Int       @id @default(autoincrement())
  user      User      @relation(fields: [userId], references: [id])
  userId    Int
  type      String
  message   String
  isSent    Boolean   @default(false)
  createdAt DateTime  @default(now())
}

model Stamp {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  mission   Mission? @relation(fields: [missionId], references: [id])
  missionId Int?
  count     Int
  createdAt DateTime @default(now())
}

model MissionUpdate {
  id        Int      @id @default(autoincrement())
  mission   Mission  @relation(fields: [missionId], references: [id])
  missionId Int
  note      String?
  createdAt DateTime @default(now())
}
